---
// Import Layout, components, and the newly created components
import Layout from '../layouts/Layout.astro';
import InteractiveHome from '../components/Interactive.svelte';  // Import the Interactive Home component
import Header from '../components/header.svelte';  // Import the Header component
import CardComponent from '../components/cardcomponent.svelte';  // Import the CardComponent
import WardrobeAnalytics from '../components/home.wardrobeanalytics.svelte';  // Import WardrobeAnalytics component
import SmartRecommendations from '../components/home.smartrecommendation.svelte';  // Import SmartRecommendations component
import OutfitPlanning from '../components/home.outfilplanning.svelte';  // Import OutfitPlanning component
import Footer from '../components/footer.svelte';  // Import the Footer component
---

<Layout title="Purple Pulsar">
  <!-- Include the Header component -->
  <Header />
  
  <!-- Interactive Home Component -->
  <InteractiveHome />

  <!-- Card Component Section -->
  <div class="mt-8">
    <h2 class="text-2xl font-semibold text-center mb-4">Explore Our Services</h2>
    <CardComponent />
  </div>
</Layout>

  
  <!-- Smart Recommendations Section -->
  <div class="mt-8">
    <SmartRecommendations />
  </div>

  <!-- Outfit Planning Section -->
  <div class="mt-8">
    <OutfitPlanning />
  </div>
  
  <!-- Wardrobe Analytics Section -->
  <div class="mt-8">
    <WardrobeAnalytics />
  </div>

   <!-- Include the Footer component -->
   <Footer />
</Layout>